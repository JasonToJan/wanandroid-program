
.mine_background {
  display: flex;
  background: #1296db;
  height: 270rpx;
  align-items: center;
  flex-direction: column;
}

.mine_avatar {
  background: white;
  border-radius: 50%;
  height: 70rpx;
  width: 70rpx;
  padding: 10rpx;
  margin-top: 40rpx;
}

.login_btn{
  margin-top: 30rpx;
  padding: 10rpx;
  font-size: 12px;
  border-radius: 10px;
  border: 1rpx solid black;
  color: black;
  height: 30rpx;
}

.mine_item_container {
  display: flex;
  flex-direction: column;
}

.mine_item {
  margin-left: 10px;
  display: flex;
  flex-direction: row;
  height: 50px;
  align-items: center;
}

.mine_item_text {
  margin-left: 20px;
  font-size: 16px;
  flex: 1;
}

.mine_line {
  width: 100%;
  height: 1px;
  background: gainsboro;
}

.btn_login{
  margin-top: 60rpx;
  width: 60%;
  color: white;
  background: #1296db;
  font-size: 16px;
}



