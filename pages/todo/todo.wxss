/* pages/todo/todo.wxss */
.indictor_container{
  display: flex;
  flex-direction: row;
}

/**
*类型未选中的样式
*/
.indictor_normal {
  text-align: center;
  font-size: 14px;
  white-space:nowrap;
  flex-grow: 1;
  width: auto;
  margin-left: 20rpx;
  color: black;
}

/**
*类型选中的样式
*/
.indictor_selected {
  text-align: center;
  font-size: 14px;
  white-space:nowrap;
  flex-grow: 1;
  width: auto;
  margin-left: 20rpx;
  color: #1296db;
  border-bottom: 4rpx solid #1296db;
  padding-bottom: 5px;
}

.item_container{
  display: flex;
  flex-direction: column;
  background: white;
  padding-top: 10px;
  padding-bottom: 10px;
  padding-left: 10px;
  padding-right: 10px;
}

.title{
  font-size: 16px;
  color: #1296db;
}

.content{
  margin-top: 5px;
  font-size: 14px;
  color: gray;
}

.date{
  margin-top: 5px;
  font-size: 12px;
  color: black;
}

.bottom_container{
  justify-content: flex-end;
  display: flex;
  flex-direction: row;
}

.edit{
  padding-top: 5px;
  padding-bottom: 5px;
  padding-left: 10px;
  padding-right: 10px;
  color: white;
  font-size: 12px;
  align-self: center;
  border-radius: 10%;
  margin-left: 10px;
}

.line{
  background: gainsboro;
  height: 1px;
  width: 100%;
}


